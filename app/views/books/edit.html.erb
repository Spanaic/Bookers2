<%# 入力フォームを作成　エラーメッセージの実装も忘れずに！ %>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <h1>Editing Book</h1>

            <%= form_for(@book) do |f| %>
                <% if @book.errors.any? %>
                    <%= @book.errors.count %><span>error prohibited this obj from being saved</span>
                        <ul>
                            <% @book.errors.full_messages.each do |message| %>
                                <li><%= message %></li>
                            <% end %>
                        </ul>
                <% end %>

                    <p><strong>Title</strong></p>
                    <%= f.text_field :title, class: "form-control" %>

                    <p><strong>Opinion</strong></p>
                    <%= f.text_area :body, class: "form-control" %>

                    <p class="create-btn"><%= f.submit "Update Book", class: "btn btn-primary btn-block" %></p>
                    <%= link_to 'Show', book_path(@book.id) %>|<%= link_to 'Back', books_path %>
            <% end %>
        </div>
    </div>
</div>