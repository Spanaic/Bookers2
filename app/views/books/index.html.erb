<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <%= render 'users/user_info' %>

            <%= render 'books/new_book', book: @book %>

        </div>

        <div class="col-lg-9">

            <h2>Books</h2>

            <table class="table table-hover">
                <tr class="table-thead">
                    <th>Profile</th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>

                <% @books.each do |book|%>
                    <tr>
                        <td>
                            <%= link_to user_path(book.user_id) do %>
                                <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "/images/no_image.jpg", :size =>'60x60' %>
                            <% end %>
                        </td>

                        <td>
                            <%= link_to "#{book.title}", book_path(book) %>
                        </td>

                        <td>
                            <%= book.body %>
                        </td>
                    </tr>
                <% end %>
            </table>

        </div>

    </div>

</div>