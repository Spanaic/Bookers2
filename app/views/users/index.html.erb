<%# renderでパーシャルを表示する予定 %>
<div class="container">

    <div class="row">

        <div class="col-lg-3">

            <%= render 'users/user_info' %>

            <%= render 'books/new_book', book: @book %>

        </div>

        <div class="col-lg-9">

        <h2>Users</h2>


            <table class="table table-hover">
                <tr>
                    <th>image</th>
                    <th>name</th>
                    <th></th>
                </tr>
                <% @users.each do |user| %>
                    <tr>
                        <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, format: "jpeg", fallback: '/images/no_image.jpg', :size => '60x60' %></td>
                        <td><%= user.name %></td>
                        <td><%= link_to 'Show', user_path(user.id) %></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>